<!DOCTYPE aspectj PUBLIC "-//AspectJ//DTD//EN" "http://www.eclipse.org/aspectj/dtd/aspectj.dtd">

<aspectj>
    <weaver options="-verbose -showWeaveInfo">
        <!-- only weave classes in this package -->
        <include within="org.allmon.client.agent.aop..*" />
    </weaver>
    <aspects>
        <!-- use only this aspect for weaving 
        <aspect name="org.allmon.client.agent.aop.annotations.advice.AspectJAdviceConf" />
        -->
        <!-- define a concrete aspect inline -->
        <concrete-aspect name="org.allmon.client.agent.aop.annotations.advice.AspectJAdvice"
                         extends="org.allmon.client.agent.aop.annotations.advice.AspectJAdviceConf">
        	<pointcut name="pointcutMethod" expression="execution(public * org.allmon.client.agent.aop..*.*(..))"/>
        </concrete-aspect>
	
